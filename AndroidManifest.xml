<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bigjay517.robocompscorekeeper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bigjay517.robocompscorekeeper.MainScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bigjay517.robocompscorekeeper.AllTeamsActivity"
            android:label="@string/title_activity_all_teams" >
        </activity>
        <activity
            android:name="com.bigjay517.robocompscorekeeper.NewTeamActivity"
            android:label="@string/title_activity_new_team" >
        </activity>
        <activity
            android:name="com.bigjay517.robocompscorekeeper.EditTeamActivity"
            android:label="@string/title_activity_edit_team" >
        </activity>
    </application>

</manifest>
